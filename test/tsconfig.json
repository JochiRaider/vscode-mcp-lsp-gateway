{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "../out/test",
    "types": ["node", "mocha"],

    // Keep ESM semantics so imports like "../../mcp/jsonrpc.js" resolve during TS compile.
    // (This repo uses .js specifiers in TS.)
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Keep root above src + test so imports from src don't emit back into src/.
    "rootDir": ".."
  },
  "include": ["./**/*.ts"]
}
